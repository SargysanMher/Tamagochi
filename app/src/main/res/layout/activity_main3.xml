<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/i"
    tools:context=".MainActivity2">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/a"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            style="@style/CardView.Dark"

            android:onClick="showPopup"
            android:text="menu">

        </TextView>
        <View
            android:layout_width="1dp"
            android:layout_height="15dp">

        </View>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CardView.Dark"
            android:gravity="top"
            android:text="satiety - " />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CardView.Dark"
            android:text="fatigue - " />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CardView.Dark"
            android:text="gladness - " />
                <TextView
                    android:text="money - "
                    android:layout_width="wrap_content"
                    style="@style/CardView.Dark"
                    android:layout_height="wrap_content">

                </TextView>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/stop"
        android:visibility="gone"
        android:text="the game is stopped"
        android:textSize="25dp"
        style="@style/CardView.Dark"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:ignore="MissingConstraints" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/a"
        android:orientation="vertical"

        tools:ignore="MissingConstraints">
        <View
            android:layout_width="1dp"
            android:layout_height="50dp">

        </View>
        <TextView
            android:layout_width="wrap_content"
            style="@style/CardView.Dark"
            android:id="@+id/satiety"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/fatigue"
            style="@style/CardView.Dark"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/gladness"
            style="@style/CardView.Dark"
            android:layout_height="wrap_content">

        </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/money"
                    style="@style/CardView.Dark"
                    android:layout_height="wrap_content">
                </TextView>
    </LinearLayout>

    <TextView
        android:id="@+id/counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/CardView.Dark"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints">


    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="64dp">

        <Button
            android:id="@+id/ashxatel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="work"
            tools:ignore="MissingConstraints">

        </Button>
        <Button
            android:id="@+id/uraxanal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="play"
            tools:ignore="MissingConstraints">


        </Button>

        <Button
            android:id="@+id/tarmanal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="sleep"

            tools:ignore="MissingConstraints">


        </Button>

        <Button
            android:id="@+id/utel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="eat"
            tools:ignore="MissingConstraints">


        </Button>


    </LinearLayout>

    <TextView
        android:id="@+id/finish"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/CardView.Dark"

        android:gravity="center"
        android:textSize="50dp"
        tools:ignore="MissingConstraints">

    </TextView>



</androidx.constraintlayout.widget.ConstraintLayout>